{
  "name": "Workflow B - Command Executor",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "seconds",
              "secondsInterval": 10
            }
          ]
        }
      },
      "id": "cron-trigger",
      "name": "Cron Every 10s",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT * FROM commands WHERE status='pending' ORDER BY created_at ASC LIMIT 1",
        "options": {}
      },
      "id": "fetch-command",
      "name": "Fetch Pending Command",
      "type": "n8n-nodes-base.sqlite",
      "typeVersion": 1,
      "position": [450, 300],
      "credentials": {
        "sqlite": {
          "id": "sqlite-db",
          "name": "Task Assistant DB"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{ $json.id }}",
              "operation": "isNotEmpty"
            }
          ]
        }
      },
      "id": "has-command",
      "name": "Has Command?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE commands SET status='processing', updated_at=CURRENT_TIMESTAMP WHERE id=:id",
        "options": {
          "queryParameters": {
            "id": "={{ $json.id }}"
          }
        }
      },
      "id": "mark-processing",
      "name": "Mark as Processing",
      "type": "n8n-nodes-base.sqlite",
      "typeVersion": 1,
      "position": [850, 200],
      "credentials": {
        "sqlite": {
          "id": "sqlite-db",
          "name": "Task Assistant DB"
        }
      }
    },
    {
      "parameters": {
        "mode": "manual",
        "assignments": {
          "assignments": [
            {
              "id": "command_id",
              "name": "command_id",
              "value": "={{ $json.id }}",
              "type": "number"
            },
            {
              "id": "command_type",
              "name": "command_type",
              "value": "={{ $json.type }}",
              "type": "string"
            },
            {
              "id": "user_id",
              "name": "user_id",
              "value": "={{ $json.user_id }}",
              "type": "string"
            },
            {
              "id": "payload",
              "name": "payload",
              "value": "={{ JSON.parse($json.payload_json) }}",
              "type": "object"
            },
            {
              "id": "telegram_chat_id",
              "name": "telegram_chat_id",
              "value": "={{ JSON.parse($json.payload_json).telegram_chat_id }}",
              "type": "string"
            },
            {
              "id": "telegram_message_id",
              "name": "telegram_message_id",
              "value": "={{ JSON.parse($json.payload_json).telegram_message_id }}",
              "type": "string"
            }
          ]
        },
        "includeOtherFields": false,
        "options": {}
      },
      "id": "parse-command",
      "name": "Parse Command",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [1050, 200]
    },
    {
      "parameters": {
        "dataPropertyName": "data",
        "rules": {
          "rules": [
            {
              "value": "draft_task_from_text",
              "output": 0
            },
            {
              "value": "confirm_draft",
              "output": 1
            },
            {
              "value": "cancel_draft",
              "output": 2
            },
            {
              "value": "edit_draft",
              "output": 3
            }
          ]
        },
        "options": {
          "fallbackOutput": 4
        }
      },
      "id": "switch-by-type",
      "name": "Switch by Command Type",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 1,
      "position": [1250, 200]
    },
    {
      "parameters": {
        "workflowId": "={{ $env.WORKFLOW_D_ID }}",
        "options": {
          "waitForSubWorkflow": true
        }
      },
      "id": "call-task-drafting",
      "name": "Call Task Drafting",
      "type": "n8n-nodes-base.executeWorkflow",
      "typeVersion": 1,
      "position": [1450, 100]
    },
    {
      "parameters": {
        "workflowId": "={{ $env.WORKFLOW_E_ID }}",
        "options": {
          "waitForSubWorkflow": true
        }
      },
      "id": "call-confirmation",
      "name": "Call Confirmation & Execution",
      "type": "n8n-nodes-base.executeWorkflow",
      "typeVersion": 1,
      "position": [1450, 200]
    },
    {
      "parameters": {
        "mode": "manual",
        "assignments": {
          "assignments": [
            {
              "id": "draft_id",
              "name": "draft_id",
              "value": "={{ $json.payload.parameters?.draft_id }}",
              "type": "number"
            },
            {
              "id": "telegram_chat_id",
              "name": "telegram_chat_id",
              "value": "={{ $json.telegram_chat_id }}",
              "type": "string"
            },
            {
              "id": "success",
              "name": "success",
              "value": "={{ !!$json.payload.parameters?.draft_id }}",
              "type": "boolean"
            },
            {
              "id": "error",
              "name": "error",
              "value": "={{ $json.payload.parameters?.draft_id ? null : 'No draft ID provided' }}",
              "type": "string"
            }
          ]
        },
        "includeOtherFields": false,
        "options": {}
      },
      "id": "handle-cancel",
      "name": "Handle Cancel",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [1450, 300]
    },
    {
      "parameters": {
        "mode": "manual",
        "assignments": {
          "assignments": [
            {
              "id": "draft_id",
              "name": "draft_id",
              "value": "={{ $json.payload.parameters?.draft_id }}",
              "type": "number"
            },
            {
              "id": "edit_text",
              "name": "edit_text",
              "value": "={{ $json.payload.parameters?.edit_text }}",
              "type": "string"
            },
            {
              "id": "telegram_chat_id",
              "name": "telegram_chat_id",
              "value": "={{ $json.telegram_chat_id }}",
              "type": "string"
            },
            {
              "id": "success",
              "name": "success",
              "value": true,
              "type": "boolean"
            }
          ]
        },
        "includeOtherFields": false,
        "options": {}
      },
      "id": "handle-edit",
      "name": "Handle Edit",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [1450, 400]
    },
    {
      "parameters": {
        "chatId": "={{ $json.telegram_chat_id }}",
        "text": "I didn't understand that command. Try asking me to create a task!",
        "additionalFields": {}
      },
      "id": "send-unknown",
      "name": "Send Unknown Response",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [1450, 500],
      "credentials": {
        "telegramApi": {
          "id": "telegram-bot",
          "name": "Task Assistant Bot"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE commands SET status=:status, updated_at=CURRENT_TIMESTAMP WHERE id=:id",
        "options": {
          "queryParameters": {
            "id": "={{ $node['Parse Command'].json.command_id }}",
            "status": "={{ $json.success ? 'completed' : 'failed' }}"
          }
        }
      },
      "id": "update-status",
      "name": "Update Command Status",
      "type": "n8n-nodes-base.sqlite",
      "typeVersion": 1,
      "position": [1650, 200],
      "credentials": {
        "sqlite": {
          "id": "sqlite-db",
          "name": "Task Assistant DB"
        }
      }
    },
    {
      "parameters": {
        "operation": "insert",
        "table": "audit_log",
        "columns": "action, entity_type, entity_id, details_json",
        "options": {
          "queryParameters": {
            "action": "command_executed",
            "entity_type": "command",
            "entity_id": "={{ $node['Parse Command'].json.command_id }}",
            "details_json": "={{ JSON.stringify({status: $json.success ? 'completed' : 'failed', result: $json}) }}"
          }
        }
      },
      "id": "audit-execution",
      "name": "Audit Execution",
      "type": "n8n-nodes-base.sqlite",
      "typeVersion": 1,
      "position": [1850, 200],
      "credentials": {
        "sqlite": {
          "id": "sqlite-db",
          "name": "Task Assistant DB"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE drafts SET status='cancelled' WHERE id=:draft_id",
        "options": {
          "queryParameters": {
            "draft_id": "={{ $json.draft_id }}"
          }
        }
      },
      "id": "cancel-draft-db",
      "name": "Cancel Draft in DB",
      "type": "n8n-nodes-base.sqlite",
      "typeVersion": 1,
      "position": [1650, 300],
      "credentials": {
        "sqlite": {
          "id": "sqlite-db",
          "name": "Task Assistant DB"
        }
      }
    },
    {
      "parameters": {
        "chatId": "={{ $json.telegram_chat_id }}",
        "text": "Draft cancelled ‚ùå",
        "additionalFields": {}
      },
      "id": "send-cancel-confirm",
      "name": "Send Cancel Confirmation",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [1850, 300],
      "credentials": {
        "telegramApi": {
          "id": "telegram-bot",
          "name": "Task Assistant Bot"
        }
      }
    }
  ],
